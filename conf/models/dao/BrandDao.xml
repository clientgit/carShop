<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="models.dao.BrandDao">
    <insert id="create" parameterType="String">
        INSERT INTO brand (name, country)
        VALUES (#{arg0}, #{arg1})
    </insert>

    <select id="show" resultType="models.dto.BrandDto">
        SELECT * FROM brand WHERE name = #{name}
    </select>

    <select id="all" resultType="models.dto.BrandDto">
        SELECT * FROM brand ORDER BY name
    </select>

    <update id="update">
        UPDATE brand SET country = #{arg1} WHERE name = #{arg0}
    </update>

    <delete id="delete">
        DELETE from BRAND WHERE NAME = #{name}
    </delete>
</mapper>